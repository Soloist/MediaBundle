{% extends 'FrequenceWebDashboardBundle::admin.html.twig' %}

{% block body %}
   <h1>Créer un dossier</h1>

    <form class="form-horizontal" method="POST" action="{{ path('soloist_admin_folder_create') }}">
        <fieldset>

            {% include 'SoloistMediaBundle:Admin:formFolder.html.twig' %}

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Créer le dossier</button>
                <a href="{{ path('soloist_admin_media_index') }}" class="btn">Annuler</a>
            </div>
        </fieldset>
    </form>

{% endblock %}

{% block aside %}
<dl>
    <dt><span class="label">Nouvel élément de type</span></dt>
    <dd>Dossier média</dd>
</dl>
{% endblock %}
